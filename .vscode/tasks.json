  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "dependsOn": ["build-core", "build-interop"]
    },
    {
      "label": "build-core",
      "type": "shell",
      "command": "moon",
      "args": ["core:build"],
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "clear": true
      }
    },
    {
      "label": "build-interop",
      "type": "shell",
      "command": "moon",
      "args": ["interop:build"],
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "clear": true
      }
    }
  ]
}
