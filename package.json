{
  "name": "reactron",
  "version": "1.0.0",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A React + Electron template",
  "type": "module",
  "main": "packages/main/dist/src/main.js",
  "nx": {
    "implicitDependencies": [
      "ipc",
      "main",
      "preload",
      "renderer"
    ]
  },
  "scripts": {
    "build": "nx run-many --target=build --all --exclude=reactron",
    "lint": "concurrently 'npm:lint:*(!:fix)'",
    "lint:fix": "concurrently npm:lint:*:fix",
    "lint:circular": "madge -c --ts-config tsconfig.json --extensions ts packages",
    "lint:format": "prettier --check \"**/*.{cjs,cts,js,json,mjs,mts,ts,tsx}\"",
    "lint:format:fix": "npm run lint:format -- --write",
    "lint:spell": "cspell --dot --no-must-find-files --no-progress .",
    "lint:syntax": "eslint --max-warnings 0 .",
    "lint:syntax:fix": "npm run lint:syntax -- --fix",
    "package": "electron-builder --config build/electron-builder.ts --mac --win --linux",
    "start": "ELECTRON_DISABLE_SECURITY_WARNINGS=true DEBUG_LOG=1 electron --enable-logging .",
    "start:w": "nodemon",
    "test": "nx run-many --target=test --all --exclude=reactron"
  },
  "dependencies": {
    "awilix": "12.0.3",
    "dotenv": "16.4.5",
    "electron-log": "5.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@eslint/js": "9.14.0",
    "@rollup/plugin-node-resolve": "15.3.0",
    "@types/node": "22.9.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/eslint-plugin": "8.14.0",
    "@typescript-eslint/parser": "8.14.0",
    "@vitejs/plugin-react": "4.3.3",
    "@vitest/coverage-v8": "2.1.4",
    "@vitest/ui": "2.1.4",
    "concurrently": "9.1.0",
    "cspell": "8.16.0",
    "electron": "33.2.0",
    "electron-builder": "25.1.8",
    "eslint": "9.14.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react-hooks": "5.0.0",
    "eslint-plugin-react-refresh": "0.4.14",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unused-imports": "4.1.4",
    "globals": "15.11.0",
    "madge": "8.0.0",
    "nodemon": "3.1.7",
    "nx": "20.1.2",
    "prettier": "3.3.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rollup": "4.27.1",
    "typescript": "5.6.3",
    "typescript-eslint": "8.14.0",
    "vite": "5.4.10",
    "vitest": "2.1.4"
  }
}
