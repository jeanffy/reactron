{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "neverConnectToCloud": true,
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputs": ["{projectRoot}/dist"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": true
    },
    "package": {
      "dependsOn": ["^build"]
    },
    "start": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": [
        {
          "target": "test",
          "params": "forward",
          "dependencies": true
        }
      ]
    }
  }
}
